@model STIVE_GestionStock.ViewModels.UserViewModels
<form class="container" asp-controller="User" asp-action="MakeUpdate" method="post">

    <input type="hidden" name="Id" value="@Model.user.Id" />
   
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Nom d'utilisateur</label>
            <input type="text" required="required" class="form-control w-75" name="Login" placeholder="Nom D'utilisteur'" class="form-control col-6 p-1" value="@Model.user.Login" />

        </div>
        
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Prenom</label>
            <input type="text" required="required" class="form-control w-75"  name="FirstName" placeholder="Prenom" class="form-control col-6 p-1" value="@Model.user.FirstName" />

        </div>
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Nom</label>
            <input type="text" required="required"  class="form-control w-75"  name="LastName" placeholder="Nom" class="form-control col-6 p-1" value="@Model.user.LastName" />

        </div>
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Numéro de téléphonne fixe</label>
            <input type="text" required="required" class="form-control w-75"  pattern="^[0-9]{10}$" title="Format du numéro incorrect" name="Phone" placeholder="numéro de téléphone" class="form-control col-6 p-1" value="@Model.user.Phone" />

        </div>
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>adresse e-mail</label>
            <input type="email" required="required" class="form-control w-75"  name="Mail" placeholder="Adresse e-mail" class="form-control col-6 p-1" value="@Model.user.Mail" />

        </div>
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Adresse</label>
            <input type="text" required="required" class="form-control w-75"  name="Adress" placeholder="Adresse" class="form-control col-6 p-1" value="@Model.user.Adress" />

        </div>



        <div class="row m-1 justify-content-center flex-column form-group">

            <label>Role</label>
            <input type="hidden" id="choice" value="@Model.user.Role.Id" name="IdRole" />

            <select  class="form-control w-75"  onchange="changeValue(this.value)" ;>

                <option value="@Model.user.Role.Id" selected>@Model.user.Role.Name</option>
                @foreach (Role r in Model.listRoles)
                {
                    if (r.Id != @Model.user.Role.Id)
                    {
                        <option value="@r.Id">@r.Name</option>
                    }
                }
            </select>

        </div>
        <div class="row m-1 justify-content-center flex-column form-group">
            <label>Changer le mot de passe</label>
            <input type="password" class="form-control w-75"  name="password" placeholder="mot de passe" class="form-control col-6 p-1" />
            <small class="form-text text-muted">Laisser le champ vide si pas de changement.</small>
        </div>

        <div class="row m-1 justify-content-center">
            <button class="col-6 btn btn-default p-1" type="submit">Valider</button>
        </div>
   
</form>

<script type="text/javascript">
    function changeValue(id) {

        document.getElementById("choice").value = id;

    }
</script>