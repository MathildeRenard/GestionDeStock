<form asp-action="SubmitRegister" asp-controller="Register" method="post" class="container">
    @if (ViewBag.Message != null)
    {
        <div class="row m-1 justify-content-center">
            <div class="alert alert-danger col-6 p-1">
                @ViewBag.Message
            </div>
        </div>
    }
    <div class="row m-1 justify-content-center">
        <input type="text" name="lastname" placeholder="Nom" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="firstname" placeholder="Prénom" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="login" placeholder="Pseudo" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="adress" placeholder="Adresse" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="phone" placeholder="Numéro de téléphone" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="mailadress" placeholder="Adresse e-mail" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="password" name="password" placeholder="Mot de passe" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <button class="col-6 btn btn-default p-1" type="submit">S'inscrire</button>
    </div>
</form> 