<h1>Modification d'entrepôt</h1>

<form asp-controller="Admin" asp-action="SubmitEditFormWarehouse" method="post">
    <div>
        <input class="form-control" type="text" name="id" hidden placeholder="id" value="@ViewBag.Warehouse.Id" />
    </div>
    <div class="row">
        <div class="col-4">
            <label class="" for="name">Nom de l'entrepôt</label>
            <input class="form-control" id="name" type="text" name="name" placeholder="Nom" value="@ViewBag.Warehouse.Name" />
        </div>
        <div class="col-4">
            <label class="" for="adress">Adresse de l'entrepôt</label>
            <input class="form-control" id="adress" type="text" name="adress" placeholder="Adresse" value="@ViewBag.Warehouse.Adress" />
        </div>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
        </div>
    </div>
</form>