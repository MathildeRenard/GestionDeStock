<h1>Modification d'un fournisseur</h1>

<form asp-controller="Admin" asp-action="SubmitEditFormProvider" method="post">
    <div>
        <input class="form-control" type="text" name="id" hidden placeholder="id" value="@ViewBag.Provider.Id" />
    </div>
    <div class="row">
        <div class="col-4">
            <label class="" for="Name">Nom du fournisseur</label>
            <input class="form-control" id="Name" type="text" name="name" placeholder="Nom" value="@ViewBag.Provider.Name" />
        </div>
        <div class="col-4">
            <label class="" for="Adress">Adresse du fournisseur</label>
            <input class="form-control" id="Adress" type="text" name="adress" placeholder="Adresse" value="@ViewBag.Provider.Adress" />
        </div>
        <div class="col-4">
            <label class="" for="Mail">Mail du fournisseur</label>
            <input class="form-control" id="Mail" type="text" name="mail" placeholder="Mail" value="@ViewBag.Provider.Mail" />
        </div>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
        </div>
    </div>
</form>